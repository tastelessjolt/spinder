<Page
    x:Class="Spinder.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Spinder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Beige">
        <TextBox x:ConnectionId='1'                             x:Name="usernameBox" HorizontalAlignment="Left" Margin="595,229,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="29" Width="296"/>
        <PasswordBox x:ConnectionId='2'                                 x:Name="passwordBox" HorizontalAlignment="Left" Margin="595,316,0,0" VerticalAlignment="Top" Height="13" Width="296"/>
        <Button x:ConnectionId='3' x:Name="button" Content="Login" HorizontalAlignment="Left" Margin="770,401,0,0" VerticalAlignment="Top" Height="47" Width="121"                     />
        <TextBlock x:ConnectionId='4' x:Name="username_label" HorizontalAlignment="Left" Margin="595,204,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='5' x:Name="password_label" HorizontalAlignment="Left" Margin="595,291,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='6' x:Name="Logging" HorizontalAlignment="Left" Margin="595,376,0,0" TextWrapping="Wrap" MaxHeight="20" Text="" VerticalAlignment="Top"/>
    </Grid>
</Page>

